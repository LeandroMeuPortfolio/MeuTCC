<body>
    <section class='gridIndex'>
        <section class='itemIndex1'>
            <div class="itemTitle">
                <h1>Caminho azul</h1>
            </div>
        </section>
        <section class='itemIndex1b'>
            <div class= "itemForm" >           
            <form action="/loginUsuario" method="post">
                <label for="loginEmail">Email</label>
                <input class='formLogin' type="text" name="email" id="loginEmail" required>

                <label for="loginSenha">Senha</label>
                <input class='formLogin' type="password" name="senha" id="loginSenha" required>
                
                <button class="buttonLogin"type="submit">Entrar</button>
            </form>
            </div> 
        
        </section><!--Fim da class itemIndex1-->

    <section class="itemIndex2">
        <p></p>
    </section><!--Fim da class itemIndex2-->
        <aside class="itemIndex3">
            <form class="form" action="/cadastrarUsuarios" method="post">
                <input class="formCadastro" type="text" name="nome" id="cadastroNome" placeholder="Nome" required>
                
                <input class="formCadastro" type="email" name="email" id="cadastroemail" placeholder="Email" required> 
                
                <input class="formCadastro" type="password" name="senha" id="cadastroSenha" placeholder="Senha" required>
                
                <div class="formCadastro">
                    <input type="radio" name="sexo" id="cadastroSexoF" value="f">
                    <label for="cadastroSexoF">Feminino</label>
                    
                    <input type="radio" name="sexo" id="cadastroSexom" value="m" >
                    <label for="cadastroSexoM">Masculino</label>
                </div>

                <label class="formCadastro" for="cadastrNascimento">Data de nascimento</label>
                <input class="formCadastro" type="date" name="nascimento" id="cadastrNascimento" required>

                <input  class="formCadastro" name="cep" type="text" maxlength="8" onkeypress="format('#####-###', this)" id="cep" value=""  placeholder="CEP" required>
                
                <button class="buttonCadastro" type="submit">Inscreva-se</button>
            </form>
        </aside><!--Fim da class itemIndex3-->
    </section>
</body>
